<p id="notice"><%= notice %></p>

<h1>Invoice Items</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Replacement</th>
      <th>Brand</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_items.each do |invoice_item| %>
      <tr>
        <td><%= invoice_item.quantity %></td>
        <td><%= invoice_item.unit_price %></td>
        <td><%= invoice_item.replacement.name %></td>
        <td><%= invoice_item.replacement.brand.name %></td>
        <td><%= invoice_item.unit_price * invoice_item.quantity %></td>
        <td><%= link_to 'Show', invoice_item %></td>
        <td><%= link_to 'Edit', edit_invoice_item_path(invoice_item) %></td>
        <td><%= link_to 'Destroy', invoice_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

