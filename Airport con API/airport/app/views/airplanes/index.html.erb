<p id="notice"><%= notice %></p>

<h1>Airplanes</h1>

<br>

<form action="/airplanes" method="GET">
  <select name="company_id">
    <option disabled selected value> Select an airway </option>
    <% Company.all.each_with_index do | b, index | %>
      <option value="<%= b.id %>" <%= b.id.to_s == @airplane_id ? "selected" : "" %>><%= b.name %></option>
    <% end -%>
  </select>
  <input type="submit", value="Filter" />
</form>

<br>

<form action="/airplanes" method="GET">
  <input type="m_r" name="m_r" placeholder="Model or registration" value="<%= @m_r %>"/>
  <input type="submit", value="SUBMIT" />
</form>

<br>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Registration</th>
      <th>Seatings</th>
      <th>Flights</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.model %></td>
        <td><%= airplane.registration %></td>
        <td><%= airplane.seatings %></td>
        <td><%= airplane.flightscount %></td>
        <td><%= link_to 'Show', airplane %></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airplane', new_airplane_path %>
